  "scripts": {
    "eslint": "eslint .",
    "eslint-fix": "eslint --fix .",
    "eslint-precommit": "git diff --name-only --cached | grep -E \".*\\.js$\" | xargs eslint",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "build": "better-npm-run build"
  },
  "betterScripts": {
    "dev": {
      "command": "gulp dev",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "test": {
      "command": "nyc mocha",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "build": {
      "command": "gulp build",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "pre-commit": [
    "eslint-precommit",
    "test",
    "build"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.1.1",
